    }

    #cpnBtn {
      border: 1px solid #fff;
      background: #fff;
      padding: 2px 4px;
      color: #7158fe;
      cursor: pointer;
    }

    .circle1,
    .circle2 {
      background: #f0fff3;
      width: 43px;
      height: 50px;
      border-radius: 50%;
      position: absolute;
      top: 50%;
      transform: translateY(-70%);

    }

    .circle1 {
      left: -25px;
    }

    .circle2 {
      right: -25px;
    }
